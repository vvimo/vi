layout_header_height = 56px
layout_header_bg = rgba(47, 47, 47, .98)
.l-header
    height layout_header_height
    line-height layout_header_height
    background layout_header_bg
    a
        text-decoration none
        color rgba(255, 255, 255, .89)

/* console */
cl_toolebar_height = 40px
cl_toolebar_lineHeight = cl_toolebar_height
cl_toolebar_padding = 0 10px
cl_toolebar_bg = #e3e3e3

cl_main_padding = 10px
cl_main_bg = #fff
.cl-toolebar
    @extend .rel
    &-main
        height cl_toolebar_height
        line-height cl_toolebar_lineHeight
        padding cl_toolebar_padding
        background cl_toolebar_bg
    &-dropdown
        @extend .abs
        top height cl_toolebar_height
        left 0
        right 0
        padding 5px 10px
        border-bottom 1px solid #e3e3e3
        background #fff
        z-index 9
        a
            @extend .abs
            left 50%
            bottom 0
            margin-left -25px
            margin-bottom -15px
            display block
            width 50px
            height 20px
            text-align center
            color #999
            border 1px solid #e3e3e3
            border-radius 3px
            background #fff
            z-index 8
            &:after
                content ''
                display block
                width 100%
                height 6px
                top 0
                left 0
                margin -20px -1px 0
                background #fff
    .btn
        display inline-block
        height 100%
        vertical-align top

.cl-main
    padding cl_main_padding
    background cl_main_bg

/* login */
.login-warpper
    height 100%
    background #fff

.login_form
    min-width 200px
    min-height 200px
    background #fff

/* home */
.h-list
    overflow hidden
    margin 0 -8px
    &-item
        @extend .rel
        background #fff
        &:after
            @extend .abs
            content ''
            display block
            left 0
            right 0
            bottom -5px
            border-bottom 1px solid #f3f3f3
        &:last-of-type:after
            border-bottom-color transparent
        &:hover
            background #f3f3f3
    &-photo
        width 72px
        height 72px
        overflow hidden
        img
            height: 100%
    &-title
        font-size 16px
        font-weight bold
        color #666
        text-decoration none
        &:hover
            color #409eff
    &-info
        min-height 72px
        font-size 12px
        color #aaa
    &-msg
        font-size 14px
        min-height 19px

.h-user
    &-bg
        @extend .rel
    &-photo
        @extend .abs
        top -24px
        left 50%
        width 64px
        height 64px
        margin-left -32px
        border 1px solid #f3f3f3
        border-radius 8px
        overflow hidden
        img
            width 100%
            height 100%
    &-info
        text-align center
        border 1px solid #f3f3f3
        border-radius 8px
    &-time
        ul
            margin 0 24px
            border-left 1px solid #f3f3f3
        li
            @extend .rel
            padding-top 8px
            padding-left 32px
            span
                display block
                color #333
                font-size 14px
                padding-bottom 5px
            p
                color #666
                font-size 12px
                line-height 2em
            &:after
                @extend .abs
                content ''
                display block
                left 0
                top 20px
                width 15px
                border-bottom 1px solid #f3f3f3
            &.active
                &:before
                    @extend .abs
                    content ''
                    display block
                    left 15px
                    top 20px
                    width 6px
                    height 6px
                    margin-top -3px
                    border-radius 3px
                    overflow hidden
                    background #8fc7ef
            &:hover
                background #fcfcfc