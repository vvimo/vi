.c-tag
    &-wrapper
        display inline-block
        height unit(tag_height, px)
        line-height unit(tag_lineHeight, px)
        margin tag_margin
        padding tag_padding
        background tag_bg
        font-size unit(tag_fontSize, px)
        color tag_color
        vertical-align middle
        opacity 1
        overflow hidden
    
    // 关闭
    &-closable
        .iconfont
            font-size inherit
            margin-left 4px
            padding-left 4px
            border-left 1px solid rgba(255, 255, 255, .75)
            color rgba(255, 255, 255, .6)
            &:hover
                @extend .pointer
                color rgba(255, 255, 255, 1)
        
    // 大小
    &-border
        height unit(tag_height+2, px)
        line-height unit(tag_lineHeight+2, px)
        font-size unit(tag_fontSize+2, px)
    &-dot
        height unit(tag_height+10, px)
        line-height unit(tag_lineHeight+10, px)
        font-size unit(tag_fontSize+2, px)
    
    // 点击
    &-checked
        border-radius 3px
        cursor pointer
    
